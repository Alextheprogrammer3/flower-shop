extends layout

block content
  // Cart Header Section
  .container.mx-auto.mt-8.px-4
    .text-center
      h1(class="text-4xl font-bold text-gray-800 mb-6") Your Shopping Cart

  // Cart Items Section
  .container.mx-auto.mt-6.px-4
    .bg-white.shadow-md.rounded-lg.p-6
      table(class="min-w-full table-auto")
        thead
          tr
            th(class="py-2 px-4 text-left text-gray-700 font-semibold") Product
            th(class="py-2 px-4 text-left text-gray-700 font-semibold") Price
            th(class="py-2 px-4 text-left text-gray-700 font-semibold") Quantity
            th(class="py-2 px-4 text-left text-gray-700 font-semibold") Total

        tbody
          tr
            td(class="py-4 px-4 border-t border-gray-200")
              img(src='/images/product-1.jpg', alt='Product 1', class='w-20 h-20 object-cover rounded')
              p(class="text-gray-800 font-semibold") Beautiful Bouquet
            td(class="py-4 px-4 border-t border-gray-200") $29.99
            td(class="py-4 px-4 border-t border-gray-200")
              select(class="border rounded p-2 bg-white")
                option 1
                option 2
                option 3
            td(class="py-4 px-4 border-t border-gray-200") $59.98

          tr
            td(class="py-4 px-4 border-t border-gray-200")
              img(src='/images/product-2.jpg', alt='Product 2', class='w-20 h-20 object-cover rounded')
              p(class="text-gray-800 font-semibold") Romantic Roses
            td(class="py-4 px-4 border-t border-gray-200") $19.99
            td(class="py-4 px-4 border-t border-gray-200")
              select(class="border rounded p-2 bg-white")
                option 1
                option 2
                option 3
            td(class="py-4 px-4 border-t border-gray-200") $39.98

  // Cart Summary Section
  .container.mx-auto.mt-8.px-4
    .flex.justify-between.items-center
      .text-right
        p(class="text-xl font-semibold text-gray-800") Subtotal: $99.96
        p(class="text-lg text-gray-600") (2 items)

  // Checkout Button Section
  .container.mx-auto.mt-6.px-4
    .flex.justify-end
      a(href='/checkout', class="bg-green-500 text-white py-3 px-6 rounded-lg text-lg hover:bg-green-400 transition duration-300") Proceed to Checkout

  // Empty Cart Button
  .container.mx-auto.mt-4.px-4
    .flex.justify-center
      button(class="bg-red-500 text-white py-3 px-6 rounded-lg text-lg hover:bg-red-400 transition duration-300") Empty Cart
