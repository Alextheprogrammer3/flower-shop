html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css", rel="stylesheet")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
    title Our Services
    style.
      /* Custom Styles */
      body {
        font-family: 'Helvetica Neue', sans-serif;
        background-color: #f7fafc;
        color: #4A4A4A;
      }
      h1, h2, h3 {
        font-family: 'Georgia', serif;
        color: #333;
      }
      .bg-primary {
        background-color: #f9f9f9;
      }
      .container {
        max-width: 1200px;
        padding: 1rem;
      }
      .hero-bg {
        background-image: url('/images/hero-bg.jpg');
        background-size: cover;
        background-position: center;
        height: 50vh;
      }
      .cta-bg {
        background-image: url('https://ca-times.brightspotcdn.com/dims4/default/1e75d66/2147483647/strip/true/crop/5461x8192+1+0/resize/1200x1800!/format/webp/quality/75/?url=https%3A%2F%2Fcalifornia-times-brightspot.s3.amazonaws.com%2Fc7%2Fae%2Fd6e3c0cc46288e2f7a740d62aab9%2Fla-newbies-guide-to-the-l-a-flower-market-004.jpg');
        background-size: cover;
        background-position: center;
        height: 60vh;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        text-align: center;
        padding: 2rem;
      }
      .cta-bg h2 {
        font-size: 3rem;
        font-weight: bold;
      }
      .cta-bg p {
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
      }
      .cta-btn {
        background-color: #4CAF50;
        color: white;
        padding: 0.8rem 2rem;
        text-transform: uppercase;
        font-weight: bold;
        border-radius: 0.25rem;
        transition: background-color 0.3s ease;
      }
      .cta-btn:hover {
        background-color: #45a049;
      }
      .icon-card {
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 0.5rem;
        padding: 2rem;
        text-align: center;
        flex: 1;
        max-width: 300px;
      }
      .icon-card i {
        font-size: 2.5rem;
        color: #4CAF50;
        margin-bottom: 1rem;
      }
      .icon-card h5 {
        font-size: 1.25rem;
        font-weight: 600;
        color: #333;
      }
      .icon-card p {
        font-size: 1rem;
        color: #555;
      }
      .service-card {
        background-color: #fff;
        border-radius: 1.5rem;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        padding: 3rem;
        text-align: center;
        flex: 1;
        max-width: 350px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin-bottom: 2rem;
      }
      .service-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
      }
      .service-detail-card {
        border-left: 5px solid #FF4081;
        padding: 2rem;
        transition: border-color 0.3s ease;
      }
      .service-detail-card:hover {
        border-color: #4CAF50;
      }
      .bg-light-grey {
        background-color: #f9f9f9;
      }

      /* New Image Section Styling */
      .hero-img {
        width: 100%;
        height: auto;
        object-fit: cover;
      }

  body(class="bg-gray-100 font-sans")
